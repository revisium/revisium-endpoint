{
  "name": "@revisium/endpoint",
  "version": "2.4.0",
  "description": "Revisium is a tool (UI/API) inspired by JSON (JSON Schema) and Git, designed to provide a flexible and low-level headless CMS solution.",
  "private": false,
  "homepage": "https://revisium.io",
  "license": "Apache-2.0",
  "author": "Anton Kashirov",
  "repository": {
    "type": "git",
    "url": "https://github.com/revisium/revisium-endpoint.git"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "generate:api": "npx swagger-typescript-api generate -p http://localhost:8080/api-json -o src/endpoint-microservice/core-api/generated -n api.ts --extract-request-params --extract-enums --disable-throw-on-error",
    "prisma:generate": "npx prisma generate && npm run prisma:postgenerate",
    "prisma:postgenerate": "echo \"export * from './client';\" > src/__generated__/client/index.ts",
    "build": "nest build && tsc-alias -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings 0",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings 0 --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "tsc": "tsc -p tsconfig.json",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:patch": "npm version patch --no-git-tag-version"
  },
  "dependencies": {
    "@apollo/server": "^5.1.0",
    "@as-integrations/express5": "^1.1.2",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/microservices": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/terminus": "^11.0.0",
    "@pothos/core": "^4.7.0",
    "@pothos/plugin-add-graphql": "^4.2.4",
    "@pothos/plugin-directives": "^4.2.3",
    "@pothos/plugin-federation": "^4.4.2",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@revisium/schema-toolkit": "^0.2.1",
    "@types/pg": "^8.15.5",
    "bcrypt": "^6.0.0",
    "graphql": "^16.12.0",
    "graphql-scalars": "^1.25.0",
    "ioredis": "^5.6.1",
    "nanoid": "^3.3.11",
    "nestjs-cls": "^6.0.1",
    "openapi3-ts": "^4.4.0",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.1",
    "@swc/core": "^1.15.8",
    "@swc/jest": "^0.2.39",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.15.21",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "prisma": "^7.4.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "swagger-typescript-api": "^13.1.3",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "overrides": {
    "hono": "^4.11.7",
    "valibot": "^1.2.0",
    "lodash": "^4.17.23"
  }
}
